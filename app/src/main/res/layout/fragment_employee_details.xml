<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center_vertical"
             tools:context=".EmployeeDetailsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal"
    android:gravity="center_horizontal">
    <TextView
            android:id="@+id/tvFirstNameDetail"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tvLastNameDetail"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
            android:id="@+id/tvAddressDetail"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_margin="7dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tvCityDetail"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_margin="7dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tvStateDetail"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_margin="7dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tvZipDetail"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_margin="7dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tvTaxIdDetail"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_margin="7dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tvPositionDetail"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_margin="7dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tvDepartmentDetail"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_margin="7dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"/>
</LinearLayout>